<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tableLayout"
        android:shrinkColumns="*"
        android:stretchColumns="*">
    <TableRow
        android:id="@+id/rowNazwa"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tvNazwa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:typeface="serif"
            android:textSize="18dp"
            android:text="Tydzień Nieparzysty"
            android:gravity="center"
            android:layout_span="6"></TextView>
    </TableRow>
        <TableRow><TextView android:text=""/></TableRow>
    <TableRow
        android:id="@+id/rowDniTygodnia"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/tvNull"
            android:text=""></TextView>
        <TextView
            android:id="@+id/tvPon"
            android:text="Pon"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/tvWto"
            android:text="Wto"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/tvSr"
            android:text="Śr"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/tvCzw"
            android:text="Czw"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:text="Pt"
            android:id="@+id/tvPt"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center_horizontal"></TextView>
    </TableRow>

        <TableRow><TextView android:text=""/></TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:id="@+id/rowSiodma"
        android:layout_width="match_parent">
        <TextView
            android:text="7:30-9:00"
            android:id="@+id/sg"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/sp"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/sw"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/ss"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/sc"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/spt"
            android:gravity="center_horizontal"></TextView>
    </TableRow>
        <TableRow><TextView android:text=""/></TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:id="@+id/rowDziewiata"
        android:layout_width="match_parent">
        <TextView
            android:text="9:15-10:45"
            android:id="@+id/dg"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/dp"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/dw"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/ds"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/dc"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/dpt"
            android:gravity="center_horizontal"></TextView>
    </TableRow>
        <TableRow><TextView android:text=""/></TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:id="@+id/rowJedenasta"
        android:layout_width="match_parent">
        <TextView
            android:text="11:00-12:30"
            android:id="@+id/jg"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/jp"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/jw"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/js"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/jc"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/jpt"
            android:gravity="center_horizontal"></TextView>
    </TableRow>
        <TableRow><TextView android:text=""/></TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:id="@+id/rowDwunasta"
        android:layout_width="match_parent">
        <TextView
            android:text="12:45-14:15"
            android:id="@+id/dwg"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/dwp"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/dww"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/dws"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/dwc"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/dwpt"
            android:gravity="center_horizontal"></TextView>
    </TableRow>
        <TableRow><TextView android:text=""/></TableRow>
    <TableRow
        android:layout_height="wrap_content"
        android:id="@+id/rowCzternasta"
        android:layout_width="match_parent">
        <TextView
            android:text="14:30-16:00"
            android:id="@+id/cg"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/cp"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/cw"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/cs"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/cc"
            android:gravity="center_horizontal"></TextView>
        <TextView
            android:id="@+id/cpt"
            android:gravity="center_horizontal"></TextView>
    </TableRow>
        <TableRow><TextView android:text=""/></TableRow>
    </TableLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showd"
        android:text="Dodaj zajęcia do planu"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Usuń plan z bazy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usunBaze"
        android:onClick="deleteDatabase"
        android:layout_above="@+id/showd"
        android:layout_alignParentStart="true" />


</RelativeLayout>